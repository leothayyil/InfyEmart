<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/account_linear"
    tools:context="com.example.user.infyemart.AccountActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/toolbar_main"
        android:id="@+id/toolbarAccount"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:id="@+id/accountCardId"
        app:cardElevation="10sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:id="@+id/account_name"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="15sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:id="@+id/account_email"
                android:layout_marginBottom="15sp"
                android:layout_marginLeft="15sp"
                />
            <android.support.v7.widget.CardView
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18sp"
                android:padding="30sp"
                android:layout_marginBottom="10sp"
                app:cardCornerRadius="5sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="10sp"
                    android:textSize="17sp"
                    android:id="@+id/account_address"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
            <ImageView
                android:layout_width="30sp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="25sp"
                android:id="@+id/iv_address_edit"
                android:src="@drawable/edit_small"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_margin="5sp"
        android:id="@+id/card_account_myOrderId"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginLeft="20sp"
                android:padding="10sp"
                android:layout_gravity="center"
                android:src="@drawable/c_recent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Orders"
                android:textColor="@color/bl4"
                android:id="@+id/Et_account_myOrderId"
                android:layout_gravity="center"
                android:textSize="20sp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:id="@+id/card_account_notificationsId"
        android:layout_margin="5sp"
   >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginLeft="20sp"
                android:padding="10sp"
                android:layout_gravity="center"
                android:src="@drawable/c_notiff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:layout_gravity="center"
                android:textColor="@color/bl4"
                android:id="@+id/Et_account_notificationsId"
                android:textSize="20sp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="40sp"
    android:layout_margin="5sp"
        android:id="@+id/card_account_myDeliveryAddId">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginLeft="20sp"
            android:padding="10sp"
            android:layout_gravity="center"
            android:src="@drawable/c_location"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Delivery Address"
            android:textColor="@color/bl4"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:id="@+id/Et_account_myDeliveryAddId"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_margin="5sp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/account_passwordChange"
            >

            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginLeft="20sp"
                android:padding="10sp"
                android:layout_gravity="center"
                android:src="@drawable/c_changepassword"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password Change"
                android:textColor="@color/bl4"
                android:layout_gravity="center"
                android:textSize="20sp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_margin="5sp"
      >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/account_logout"
            >

            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginLeft="20sp"
                android:padding="10sp"
                android:layout_gravity="center"
                android:src="@drawable/c_logout"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="@color/bl4"
                android:layout_gravity="center"
                android:textSize="20sp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
