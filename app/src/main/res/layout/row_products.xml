<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:backgroundTint="#fff"
        app:cardCornerRadius="10sp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:layout_width="170sp"
            android:layout_height="180sp"
            android:padding="10sp"
            android:id="@+id/productList_image"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Offer"
                    android:id="@+id/productList_offer"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:id="@+id/productList_name"
                    android:text="Paneer-Premium Fresh"
                    />
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="5sp"
                    android:id="@+id/variant_spinnerId"
                    android:layout_gravity="center">
                </Spinner>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RS 90"
                    android:layout_gravity="center"
                    android:id="@+id/productList_optionName"
                    android:textSize="15sp"
                    android:layout_marginLeft="10sp"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RS 90"
                        android:id="@+id/productList_marginPrice"
                        android:textSize="15sp"
                        android:layout_marginLeft="10sp"/>
                    <View
                        android:layout_width="30sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="11sp"
                        android:background="@color/black"
                        android:layout_height="1sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="RS 77.55"
                        android:id="@+id/productList_originalPrice"
                        android:textColor="@color/black"
                        android:layout_marginLeft="70sp"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">


                    <ImageButton
                        android:layout_width="0sp"
                        android:backgroundTint="@color/gr3"
                        android:layout_height="40sp"
                        android:layout_weight="1"
                        android:id="@+id/addToCart_btn"
                        android:src="@drawable/small_cart"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>