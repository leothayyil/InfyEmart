<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:backgroundTint="#fff"
        app:cardCornerRadius="10sp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="6">

        <ImageView
            android:layout_width="130sp"
            android:layout_height="140sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="10sp"
            android:id="@+id/productList_image"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5sp"
                android:gravity="center"
                android:layout_toEndOf="@id/productList_image"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/productList_image">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Offer"
                        android:textColor="@color/red"
                        android:id="@+id/productList_offer"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/productList_optionName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5sp"
                        android:text="Qty"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/bl4"
                    android:id="@+id/productList_name"
                    android:text="Paneer-Premium Fresh"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <Spinner
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="5sp"
                        android:foregroundGravity="center"
                        android:layout_marginBottom="5sp"
                        android:id="@+id/variant_spinnerId"
                        android:layout_gravity="center">
                    </Spinner>

                        <ImageView
                            android:layout_width="40sp"
                            android:backgroundTint="@color/gr3"
                            android:layout_height="45sp"
                            android:id="@+id/addToCart_btn"
                            android:layout_marginRight="5sp"
                            android:src="@drawable/cart_edt"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:weightSum="5"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:text="RS 90"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:id="@+id/productList_marginPrice"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:layout_weight="2"
                        android:text="RS 77.55"
                        android:gravity="center"
                        android:id="@+id/productList_originalPrice"
                        android:textColor="@color/bl4"
                        />

                </LinearLayout>
                <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/linearCount"
                        android:visibility="gone"
                        >
                        <Button
                            android:layout_width="70sp"
                            android:layout_height="50sp"
                            android:backgroundTint="@color/gr3"
                            android:textColor="#fff"
                            android:id="@+id/productCountBtn"
                            android:text="Add"/>

                    </LinearLayout>

            </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>