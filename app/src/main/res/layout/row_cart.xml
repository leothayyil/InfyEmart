<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5sp"
    android:layout_marginLeft="5sp"
    android:layout_marginRight="5sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#fff"
        app:cardCornerRadius="10sp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="170sp"
                android:layout_height="180sp"
                android:padding="10sp"
                android:id="@+id/cart_image"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@+id/cart_image"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/cart_image">

                <ImageButton
                    android:id="@+id/deleteItemCart"
                    android:layout_width="45sp"
                    android:layout_height="40sp"
                    android:layout_gravity="right|top"
                    android:layout_marginLeft="5sp"
                    android:backgroundTint="@color/white"
                    android:paddingBottom="5sp"
                    android:src="@drawable/delete_cartt" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cart_qty"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="140sp"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_margin="5sp"
                    android:textColor="@color/black"
                    android:id="@+id/cart_productName"

                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10sp"
                    android:layout_marginLeft="20sp"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/red">
                        <ImageButton
                            android:layout_width="15sp"
                            android:layout_height="15sp"
                            android:paddingTop="5sp"
                            android:paddingBottom="5sp"
                            android:layout_marginRight="5sp"
                            android:layout_gravity="center"
                            android:id="@+id/minusItemCart"
                            android:layout_marginLeft="8sp"
                            android:backgroundTint="@color/red"
                            android:src="@drawable/minus"
                            />
                        <TextView
                            android:layout_width="50sp"
                            android:layout_height="30sp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="74"
                            android:textStyle="bold"
                            android:layout_marginLeft="5sp"
                            android:id="@+id/cart_total"

                            android:textColor="@color/white"
                            android:background="@color/bl2"
                            android:layout_gravity="center"/>
                        <ImageView
                            android:layout_width="19sp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5sp"
                            android:foregroundGravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/plusItemCart"
                            android:layout_marginRight="8sp"
                            android:backgroundTint="@color/red"
                            android:src="@drawable/plus"
                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RS 90"
                        android:id="@+id/cart_mPrice"
                        android:textSize="15sp"
                        android:layout_marginLeft="10sp"/>
                    <View
                        android:layout_width="42sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="11sp"
                        android:background="@color/red"
                        android:layout_height="1sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="RS 77.55"
                        android:id="@+id/cart_oPrice"
                        android:textColor="@color/black"
                        android:layout_marginLeft="70sp"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>