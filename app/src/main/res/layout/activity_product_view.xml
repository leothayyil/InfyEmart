<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bl_lit"
    android:layout_height="match_parent"
    tools:context="com.example.user.infyemart.ProductViewActivity">
    <include layout="@layout/toolbar_main"
        android:id="@+id/toolbarProductView"/>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_margin="5sp"
    android:layout_below="@+id/toolbarProductView"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarProductView"
        android:id="@+id/scrollViewProductView"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20sp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="19dp"
                android:id="@+id/PV_productNmae"
                android:layout_gravity="center"
                android:layout_margin="15sp"
                android:text="Product Name"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:id="@+id/PV_qty"
                    android:text="Quantity"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35%"
                    android:textSize="20sp"
                    android:id="@+id/PV_offer"
                    android:textColor="@color/red"
                    android:layout_marginLeft="15sp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="250sp"
                android:layout_gravity="center"
                android:layout_margin="5sp"
                android:id="@+id/PV_imageView"
                android:layout_height="300sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageButton
                    android:layout_width="50sp"
                    android:layout_height="45sp"
                    android:id="@+id/PV_add"
                    android:padding="2sp"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="5sp"
                    android:src="@drawable/cart_edt"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:padding="5sp"
                android:layout_marginTop="10sp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs 7555"
                    android:gravity="center"
                    android:textSize="19sp"
                    android:id="@+id/PV_originalPrice"
                    android:textColor="@color/bl4"
                    />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs 430"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:id="@+id/PV_marginPrice"
                        />


            </LinearLayout>
            </LinearLayout>
    </ScrollView>
</android.support.v7.widget.CardView>

</RelativeLayout>
