                android:layout_width="match_parent"
                app:cardElevation="15sp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="180sp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="35sp"
                        android:orientation="vertical"
                        android:layout_marginLeft="10sp">
                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:text="Spectral Back Cover for Lenovo K8 plus"/>
                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="Black"/>
                        <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:text="Rs-100"
                        android:textColor="@color/black"/>
                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_margin="5sp"
                            android:text="QTY-1"
                            />

                    </LinearLayout>
                    <ImageView
                        android:layout_width="100sp"
                        android:layout_height="120sp"
                        android:src="@drawable/c_vegitable"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RatingBar
                    android:rating="3.5"
                    android:stepSize="0.5"
                    android:numStars="5"
                    android:theme="@style/RatingBar"
                    android:layout_margin="8sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:text="Write a review"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="NEED HELP?"
                />
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="10sp"
                android:layout_marginTop="5sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shpping details"
                    android:layout_marginLeft="10sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abin Thambi"
                    android:layout_margin="20sp"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

            <TextView
                android:layout_width="160sp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Flat Number 9 holyHeights appartments"
                android:layout_marginLeft="20sp"
                android:textSize="12sp"
                android:layout_marginBottom="10sp"
                android:textColor="@color/black"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="10sp"
                android:layout_marginTop="5sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price Details"
                        android:layout_marginLeft="10sp"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:text="List Price"
                        android:layout_marginTop="20sp"
                        android:textSize="16sp"
                        android:layout_marginLeft="15sp"
                        android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="599"
                            android:textColor="@color/black"
                            android:layout_marginTop="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp">


                        <TextView
                            android:layout_width="200sp"
                            android:layout_height="wrap_content"
                            android:text="Selling price"
                            android:textSize="16sp"
                            android:layout_marginLeft="15sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="199"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp">


                        <TextView
                            android:layout_width="200sp"
                            android:layout_height="wrap_content"
                            android:text="Discount"
                            android:textSize="16sp"
                            android:layout_marginLeft="15sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-400"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp">
                        <TextView
                            android:layout_width="200sp"
                            android:layout_height="wrap_content"
                            android:text="Shipping cost"
                            android:textSize="16sp"
                            android:layout_marginLeft="15sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp">


                        <TextView
                            android:layout_width="200sp"
                            android:layout_height="wrap_content"
                            android:text="Total Amount"
                            android:textSize="18sp"
                            android:layout_marginLeft="15sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="249"
                            android:textSize="17sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:background="@color/black"
                        android:layout_height="wrap_content"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="200sp"
                            android:layout_height="wrap_content"
                            android:text="Mode of Payment "
                            android:textSize="16sp"
                            android:layout_marginLeft="15sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="COD"/>
                    </LinearLayout>



                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
