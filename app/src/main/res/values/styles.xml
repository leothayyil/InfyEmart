<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="colorControlNormal">#fff</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/red</item>
        <item name="colorControlActivated">@color/bl2</item>
    </style>
    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/blue_infy</item>
        <item name="colorControlActivated">@color/red</item>
    </style>
    <style name="MyTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/bl2</item>
        <item name="colorPrimaryDark">@color/bl4</item> //this is the statusbar color
        <!-- Other attributes -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
